    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests: current file",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": ["${relativeFile}", "--runInBand"],
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "env": {
                "DEBUG": "true"
            }
        }
    ]
}
